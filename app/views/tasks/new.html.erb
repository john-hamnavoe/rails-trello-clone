<%= turbo_frame_tag dom_id(@task.list, "add_task") do %>
  <div class="bg-white rounded-lg shadow-md border-blue-200 border-2 p-2 max-w-xl">
    <h1 class="text-base font-semibold text-gray-900">Add new task</h1>
    <%= render "form", task: @task, cancel_path: board_path(@task.board), data: {turbo_frame: :_top} %>
  </div>
<% end %>